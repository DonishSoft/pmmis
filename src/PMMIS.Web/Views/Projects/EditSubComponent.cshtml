@model PMMIS.Domain.Entities.SubComponent
@using PMMIS.Domain.Entities
@{
    ViewData["Title"] = "Редактирование подкомпонента";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var component = ViewBag.Component as Component;
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Проекты</a></li>
            <li class="breadcrumb-item"><a asp-action="SubComponents" asp-route-componentId="@component?.Id">Подкомпоненты (@component?.Number)</a></li>
            <li class="breadcrumb-item active">@Model.Code</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <form asp-action="EditSubComponent" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ComponentId" />
                <input type="hidden" asp-for="CreatedAt" />
                
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-pencil me-2"></i>Подкомпонент @Model.Code</h5>
                        <span class="badge bg-secondary fs-6">@Model.Code</span>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">Код <span class="text-danger">*</span></label>
                                <input type="text" asp-for="Code" class="form-control" required />
                            </div>
                            <div class="col-md-9">
                                <label class="form-label">Название (RU) <span class="text-danger">*</span></label>
                                <input type="text" asp-for="NameRu" class="form-control" required />
                            </div>
                        </div>
                        
                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <label class="form-label">Название (TJ)</label>
                                <input type="text" asp-for="NameTj" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Название (EN)</label>
                                <input type="text" asp-for="NameEn" class="form-control" />
                            </div>
                        </div>
                        
                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <label class="form-label">Бюджет (USD)</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" asp-for="AllocatedBudget" class="form-control" step="0.01" min="0" />
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-3">
                            <label class="form-label">Описание</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i> Сохранить
                    </button>
                    <a asp-action="SubComponents" asp-route-componentId="@component?.Id" class="btn btn-outline-secondary">Отмена</a>
                    
                    @if (User.IsInRole("PMU_ADMIN") && Model.Contracts.Count == 0)
                    {
                        <form asp-action="DeleteSubComponent" asp-route-id="@Model.Id" method="post" class="ms-auto" onsubmit="return confirm('Удалить подкомпонент @Model.Code?')">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="bi bi-trash me-1"></i> Удалить
                            </button>
                        </form>
                    }
                </div>
            </form>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h6 class="mb-0"><i class="bi bi-diagram-3 me-2"></i>Компонент</h6>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>@component?.Number</strong></p>
                    <p class="text-muted mb-0 small">@component?.GetName("ru")</p>
                </div>
            </div>
            
            <div class="card border-0 shadow-sm mt-3">
                <div class="card-header bg-white">
                    <h6 class="mb-0"><i class="bi bi-file-text me-2"></i>Контракты</h6>
                </div>
                <div class="card-body text-center">
                    <div class="fs-2 fw-bold text-info">@Model.Contracts.Count</div>
                    <small class="text-muted">связанных контрактов</small>
                </div>
            </div>
        </div>
    </div>
</div>
