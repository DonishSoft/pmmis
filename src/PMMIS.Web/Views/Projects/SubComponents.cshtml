@model List<PMMIS.Domain.Entities.SubComponent>
@using PMMIS.Domain.Entities
@{
    ViewData["Title"] = "Подкомпоненты";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var component = ViewBag.Component as Component;
    var project = ViewBag.Project as Project;
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Проекты</a></li>
            <li class="breadcrumb-item"><a asp-action="Components" asp-route-projectId="@project?.Id">Компоненты (@project?.Code)</a></li>
            <li class="breadcrumb-item active">Подкомпоненты (@component?.Number)</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>
                <i class="bi bi-diagram-2 me-2"></i>Компонент @component?.Number
            </h2>
            <p class="text-muted">@component?.GetName("ru") — Бюджет: $@component?.AllocatedBudget.ToString("N0")</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Components" asp-route-projectId="@project?.Id" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Назад
            </a>
            <a asp-action="CreateSubComponent" asp-route-componentId="@component?.Id" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Добавить подкомпонент
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px">Код</th>
                        <th>Название</th>
                        <th>Описание</th>
                        <th class="text-end">Бюджет</th>
                        <th class="text-center">Контракты</th>
                        <th style="width: 120px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sub in Model)
                    {
                        <tr>
                            <td><span class="badge bg-secondary fs-6">@sub.Code</span></td>
                            <td class="fw-semibold">@sub.GetName("ru")</td>
                            <td class="text-muted">@(sub.Description ?? "—")</td>
                            <td class="text-end fw-bold text-success">$@sub.AllocatedBudget.ToString("N0")</td>
                            <td class="text-center">
                                <span class="badge bg-info">@sub.Contracts.Count</span>
                            </td>
                            <td class="text-end">
                                <a asp-action="EditSubComponent" asp-route-id="@sub.Id" class="btn btn-sm btn-outline-primary" title="Редактировать">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                @if (User.IsInRole("PMU_ADMIN") && sub.Contracts.Count == 0)
                                {
                                    <form asp-action="DeleteSubComponent" asp-route-id="@sub.Id" method="post" class="d-inline" onsubmit="return confirm('Удалить подкомпонент @sub.Code?')">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-5">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                <p>Подкомпоненты не добавлены</p>
                                <a asp-action="CreateSubComponent" asp-route-componentId="@component?.Id" class="btn btn-primary">
                                    <i class="bi bi-plus-lg me-1"></i> Добавить первый
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Summary -->
    <div class="card border-0 bg-light mt-4">
        <div class="card-body">
            <div class="row text-center">
                <div class="col-md-4">
                    <div class="fs-3 fw-bold text-primary">@Model.Count</div>
                    <small class="text-muted">Подкомпонентов</small>
                </div>
                <div class="col-md-4">
                    <div class="fs-3 fw-bold text-success">$@Model.Sum(s => s.AllocatedBudget).ToString("N0")</div>
                    <small class="text-muted">Общий бюджет</small>
                </div>
                <div class="col-md-4">
                    <div class="fs-3 fw-bold text-info">@Model.Sum(s => s.Contracts.Count)</div>
                    <small class="text-muted">Контрактов</small>
                </div>
            </div>
        </div>
    </div>
</div>
