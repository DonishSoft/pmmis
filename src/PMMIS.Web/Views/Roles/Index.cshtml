@model PMMIS.Web.ViewModels.Roles.RoleIndexViewModel
@{
    ViewData["Title"] = "Роли";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-shield-lock me-2"></i>Роли и права доступа</h2>
        <div class="d-flex gap-2">
            <a asp-controller="Users" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-people me-1"></i> Пользователи
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-1"></i> Новая роль
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Roles Cards -->
    <div class="row g-4">
        @foreach (var role in Model.Roles)
        {
            var count = Model.UserCounts.ContainsKey(role.Id) ? Model.UserCounts[role.Id] : 0;
            var permCount = Model.PermissionCounts.ContainsKey(role.Id) ? Model.PermissionCounts[role.Id] : 0;
            var permPercent = Model.TotalModules > 0 ? (permCount * 100 / Model.TotalModules) : 0;
            
            var roleColor = role.Name switch
            {
                "PMU_ADMIN" => "danger",
                "PMU_STAFF" => "primary",
                "WORLD_BANK" => "info",
                "CONTRACTOR" => "warning",
                _ => "secondary"
            };
            
            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <div>
                            <span class="badge bg-@roleColor fs-6">@role.Name</span>
                            @if (role.IsSystem)
                            {
                                <span class="badge bg-dark ms-1"><i class="bi bi-lock"></i></span>
                            }
                        </div>
                        <span class="text-muted small">#@role.SortOrder</span>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">@(role.Description ?? "Нет описания")</p>
                        
                        <div class="row text-center mb-3">
                            <div class="col-6">
                                <div class="fs-3 fw-bold @(count > 0 ? "text-success" : "text-muted")">@count</div>
                                <small class="text-muted"><i class="bi bi-people me-1"></i>Пользователей</small>
                            </div>
                            <div class="col-6">
                                <div class="fs-3 fw-bold @(permCount > 0 ? "text-primary" : "text-muted")">@permCount/@Model.TotalModules</div>
                                <small class="text-muted"><i class="bi bi-key me-1"></i>Модулей</small>
                            </div>
                        </div>

                        <!-- Permission progress -->
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <small class="text-muted">Доступ к модулям</small>
                                <small class="fw-bold">@permPercent%</small>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-@roleColor" style="width: @permPercent%"></div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex gap-2">
                        <a asp-action="Permissions" asp-route-id="@role.Id" class="btn btn-primary btn-sm flex-grow-1">
                            <i class="bi bi-shield-check me-1"></i> Права доступа
                        </a>
                        <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-pencil"></i>
                        </a>
                        @if (!role.IsSystem && count == 0)
                        {
                            <form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline" onsubmit="return confirm('Удалить роль @role.Name?')">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Info -->
    <div class="card border-0 bg-light mt-4">
        <div class="card-body">
            <h6><i class="bi bi-info-circle me-2"></i>Системные роли:</h6>
            <div class="row">
                <div class="col-md-3">
                    <strong class="text-danger">PMU_ADMIN</strong>
                    <br><small class="text-muted">Полный административный доступ</small>
                </div>
                <div class="col-md-3">
                    <strong class="text-primary">PMU_STAFF</strong>
                    <br><small class="text-muted">Сотрудники ПИГ</small>
                </div>
                <div class="col-md-3">
                    <strong class="text-info">WORLD_BANK</strong>
                    <br><small class="text-muted">Представители ВБ (просмотр)</small>
                </div>
                <div class="col-md-3">
                    <strong class="text-warning">CONTRACTOR</strong>
                    <br><small class="text-muted">Подрядчики (ограниченный)</small>
                </div>
            </div>
        </div>
    </div>
</div>
