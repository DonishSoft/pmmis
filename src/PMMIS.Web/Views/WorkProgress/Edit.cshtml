                                            <i class="bi @(doc.Type == DocumentType.Photo ? "bi-image" : "bi-file-earmark") me-2"></i>
                                            @(doc.Description ?? doc.OriginalFileName)
                                        </a>
                                        <form asp-action="DeleteDocument" method="post" class="d-inline"
                                              onsubmit="return confirm('–£–¥–∞–ª–∏—Ç—å –¥–æ–∫—É–º–µ–Ω—Ç?')">
                                            <input type="hidden" name="documentId" value="@doc.Id" />
                                            <input type="hidden" name="workProgressId" value="@Model.WorkProgress.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </li>
                                }
                            </ul>
                        }


                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h6 class="mb-0">–î–æ–±–∞–≤–∏—Ç—å –Ω–æ–≤—ã–µ —Ñ–∞–π–ª—ã</h6>
                            <button type="button" class="btn btn-sm btn-success" id="addFileBtn">
                                <i class="bi bi-plus-lg"></i> –î–æ–±–∞–≤–∏—Ç—å —Ñ–∞–π–ª
                            </button>
                        </div>
                        <div id="filesContainer">
                            <!-- Dynamic file rows -->
                        </div>
                        <div id="noFiles" class="text-center text-muted py-3">
                            <i class="bi bi-cloud-upload fs-3 d-block mb-1"></i>
                            <small>–ù–∞–∂–º–∏—Ç–µ ¬´–î–æ–±–∞–≤–∏—Ç—å —Ñ–∞–π–ª¬ª</small>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i> –°–æ—Ö—Ä–∞–Ω–∏—Ç—å
                    </button>
                    <a asp-action="Index" asp-route-contractId="@Model.WorkProgress.ContractId" class="btn btn-outline-secondary">–ù–∞–∑–∞–¥</a>
                    
                    @if (User.IsInRole("PMU_ADMIN"))
                    {
                        <form asp-action="Delete" asp-route-id="@Model.WorkProgress.Id" method="post" class="ms-auto" onsubmit="return confirm('–£–¥–∞–ª–∏—Ç—å –æ—Ç—á—ë—Ç?')">
                            <button type="submit" class="btn btn-outline-danger">
                                <i class="bi bi-trash me-1"></i> –£–¥–∞–ª–∏—Ç—å
