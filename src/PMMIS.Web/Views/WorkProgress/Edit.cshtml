                                <strong>@Model.WorkProgress.SubmittedAt.Value.ToString("dd.MM.yyyy HH:mm")</strong>
                            </li>
                        }
                        @if (Model.WorkProgress.ManagerReviewedAt.HasValue)
                        {
                            <li class="list-group-item">
                                <small class="text-muted">–û–¥–æ–±—Ä–µ–Ω –º–µ–Ω–µ–¥–∂–µ—Ä–æ–º</small><br />
