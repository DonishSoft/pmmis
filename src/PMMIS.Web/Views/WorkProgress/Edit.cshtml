                @if (Model.ContractIndicators?.Any() == true)
                {
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><i class="bi bi-bar-chart-line me-2"></i>–ü—Ä–æ–≥—Ä–µ—Å—Å –ø–æ –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä–∞–º</h5>
                            <span class="badge bg-info">@Model.ContractIndicators.Count –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä(–æ–≤)</span>
                        </div>
                        <div class="card-body">
                            @for (var i = 0; i < Model.ContractIndicators.Count; i++)
                            {
