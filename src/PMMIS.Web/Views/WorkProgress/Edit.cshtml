</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script>
    const progressInput = document.getElementById('progressInput');
    const progressBar = document.getElementById('progressBar');
    
    progressInput.addEventListener('input', function() {
        const value = Math.min(100, Math.max(0, this.value));
        progressBar.style.width = value + '%';
        
        progressBar.classList.remove('bg-success', 'bg-info', 'bg-warning', 'bg-danger');
        if (value >= 80) progressBar.classList.add('bg-success');
        else if (value >= 50) progressBar.classList.add('bg-info');
        else if (value >= 25) progressBar.classList.add('bg-warning');
        else progressBar.classList.add('bg-danger');
    });

    // Handle indicator progress updates
    document.querySelectorAll('.indicator-value').forEach(function(input) {
        input.addEventListener('input', function() {
            const index = this.dataset.index;
            const target = parseFloat(this.dataset.target) || 0;
            const previous = parseFloat(this.dataset.previous) || 0;
            const value = parseFloat(this.value) || 0;
            
            const newTotal = previous + value;
            const pct = target > 0 ? Math.min(100, (newTotal / target) * 100) : 0;
            
            const bar = document.querySelector('.progress-bar-' + index);
            if (bar) {
                bar.style.width = pct + '%';
                bar.textContent = pct.toFixed(1) + '%';
                
                bar.classList.remove('bg-success', 'bg-info', 'bg-warning', 'bg-danger');
                if (pct >= 80) bar.classList.add('bg-success');
                else if (pct >= 50) bar.classList.add('bg-info');
                else if (pct >= 25) bar.classList.add('bg-warning');
                else bar.classList.add('bg-danger');
            }
        });
    });

    // ========================
    // Dynamic File Upload
    // ========================
    function addFileRow() {
        const container = document.getElementById('filesContainer');
        const noFiles = document.getElementById('noFiles');
        if (noFiles) noFiles.style.display = 'none';
        
        const row = document.createElement('div');
        row.className = 'row g-2 mb-2 file-row align-items-center p-2 border rounded bg-white';
        row.innerHTML = `
            <div class="col-md-3">
                <select class="form-select form-select-sm file-type-select">
                    <option value="report">üìÑ –û—Ç—á—ë—Ç / –ê–∫—Ç</option>
                    <option value="photo">üì∑ –§–æ—Ç–æ–º–∞—Ç–µ—Ä–∏–∞–ª</option>
                </select>
            </div>
            <div class="col-md-7">
                <input type="file" class="form-control form-control-sm file-input"
                       accept=".pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png" />
            </div>
            <div class="col-md-2 text-center">
                <button type="button" class="btn btn-outline-danger btn-sm remove-file-btn">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        `;
        container.appendChild(row);
        
        row.querySelector('.remove-file-btn').addEventListener('click', () => {
            row.remove();
            if (container.children.length === 0 && noFiles) {
                noFiles.style.display = 'block';
            }
        });
    }
    
    document.getElementById('addFileBtn')?.addEventListener('click', addFileRow);
    
    // Before submit: assign correct names to file inputs
    document.querySelector('form[method="post"][enctype]')?.addEventListener('submit', function() {
        document.querySelectorAll('.file-row').forEach(row => {
            const type = row.querySelector('.file-type-select')?.value;
            const input = row.querySelector('.file-input');
            if (input && input.files.length > 0) {
                input.name = type === 'photo' ? 'PhotoFiles' : 'ReportFiles';
            }
        });
    });
</script>
}
