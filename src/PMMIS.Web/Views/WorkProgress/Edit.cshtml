                                                <h6 class="mb-1">
                                                    <span class="badge bg-secondary me-1">@indicator.IndicatorCode</span>
                                                    @indicator.IndicatorName
                                                </h6>
                                                <small class="text-muted">
                                                    –¶–µ–ª—å: <strong>@indicator.TargetValue.ToString("N0")</strong> @indicator.Unit
                                                    | –î–æ—Å—Ç–∏–≥–Ω—É—Ç–æ: <strong class="text-primary">@indicator.PreviousAchieved.ToString("N0")</strong>
                                                </small>
                                            </div>
                                            <div class="col-md-3">
                                                <label class="form-label small">–ü—Ä–æ–≥—Ä–µ—Å—Å –≤ —ç—Ç–æ–º –ê–í–†</label>
                                                <div class="input-group input-group-sm">
                                                    <input type="number" 
                                                           name="ContractIndicators[@i].Value" 
                                                           class="form-control indicator-value" 
                                                           value="@indicator.Value"
                                                           min="0" step="0.01"
                                                           data-target="@indicator.TargetValue"
                                                           data-previous="@indicator.PreviousAchieved"
                                                           data-index="@i" />
                                                    <span class="input-group-text">@indicator.Unit</span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <label class="form-label small">–û–±—â–∏–π –ø—Ä–æ–≥—Ä–µ—Å—Å</label>
                                                <div class="progress" style="height: 20px;">
                                                    @{
                                                        var totalAchieved = indicator.PreviousAchieved + indicator.Value;
                                                        var pct = indicator.TargetValue > 0
                                                            ? Math.Min(100, (totalAchieved / indicator.TargetValue) * 100) : 0;
                                                        var barClass = pct >= 80 ? "bg-success" : pct >= 50 ? "bg-info" : pct >= 25 ? "bg-warning" : "bg-danger";
                                                    }
                                                    <div class="progress-bar @barClass progress-bar-@i" role="progressbar" style="width: @pct.ToString("F0")%">
                                                        @pct.ToString("F1")%
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-2">
                                            <input type="text" name="ContractIndicators[@i].Notes"
                                                   class="form-control form-control-sm" 
                                                   value="@indicator.Notes" placeholder="–ü—Ä–∏–º–µ—á–∞–Ω–∏–µ..." />
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }

                <!-- File Upload Section -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-paperclip me-2"></i>–î–æ–∫—É–º–µ–Ω—Ç—ã</h5>
                    </div>
                    <div class="card-body">
                        @if (Model.ExistingDocuments?.Any() == true)
                        {
                            <h6 class="mb-3">–ü—Ä–∏–∫—Ä–µ–ø–ª—ë–Ω–Ω—ã–µ —Ñ–∞–π–ª—ã</h6>
                            <ul class="list-group mb-3">
                                @foreach (var doc in Model.ExistingDocuments)
                                {
