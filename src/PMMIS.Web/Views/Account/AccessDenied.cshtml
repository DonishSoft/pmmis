@{
    ViewData["Title"] = "Доступ запрещён";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6 text-center">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-5">
                    <div class="text-danger mb-4">
                        <i class="bi bi-shield-exclamation" style="font-size: 5rem;"></i>
                    </div>
                    <h2 class="mb-3">Доступ запрещён</h2>
                    <p class="text-muted mb-4">
                        У вас нет прав для доступа к данной странице.<br>
                        Обратитесь к администратору для получения доступа.
                    </p>
                    <div class="d-flex gap-2 justify-content-center">
                        <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary">
                            <i class="bi bi-house me-1"></i> На главную
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> Назад
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
