    var totalBudget = (decimal)ViewBag.TotalBudget;
    var totalContractValue = (decimal)ViewBag.TotalContractValue;
    var totalPaid = (decimal)ViewBag.TotalPaid;
    var pendingPayments = (decimal)ViewBag.PendingPayments;
    var disbursementRate = (decimal)ViewBag.DisbursementRate;
    var averageProgress = (decimal)ViewBag.AverageProgress;
    var upcomingDeadlines = ViewBag.UpcomingDeadlines as List<Contract> ?? new List<Contract>();
    var overdueContracts = ViewBag.OverdueContracts as List<Contract> ?? new List<Contract>();
    var recentContracts = ViewBag.RecentContracts as List<Contract> ?? new List<Contract>();
    
    var procurementTotal = (decimal)ViewBag.ProcurementTotal;
    var procurementPlanned = (int)ViewBag.ProcurementPlanned;
    var procurementInProgress = (int)ViewBag.ProcurementInProgress;
    var procurementCompleted = (int)ViewBag.ProcurementCompleted;
    var procurementCount = (int)ViewBag.ProcurementCount;
    
    // Management Alerts (KPI / Red Flags)
    var managementAlerts = ViewBag.ManagementAlerts as List<ManagementAlert> ?? new List<ManagementAlert>();
    var criticalAlertsCount = (int)(ViewBag.CriticalAlertsCount ?? 0);
    var warningAlertsCount = (int)(ViewBag.WarningAlertsCount ?? 0);
    var kpiSummary = ViewBag.KpiSummary as DashboardKpiSummary;
}


<div class="container-fluid">
