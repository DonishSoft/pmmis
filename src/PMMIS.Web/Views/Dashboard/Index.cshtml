</div>

@section Scripts {
<script>
    // Component Budget Chart
    var chartData = [
        @foreach (var component in project?.Components ?? Enumerable.Empty<Component>())
        {
            <text>{ x: '–ö–æ–º–ø–æ–Ω–µ–Ω—Ç @component.Number', y: @component.AllocatedBudget },</text>
        }
    ];

    var chart = new ej.charts.Chart({
        primaryXAxis: { valueType: 'Category' },
        primaryYAxis: { labelFormat: '${value}' },
        series: [{
            dataSource: chartData,
            xName: 'x',
            yName: 'y',
            type: 'Column',
            fill: '#667eea',
            cornerRadius: { topLeft: 8, topRight: 8 }
        }],
        tooltip: { enable: true }
    });
    chart.appendTo('#componentBudgetChart');

    // Procurement Status Chart
    var procurementData = [
        { x: '–ó–∞–ø–ª–∞–Ω–∏—Ä–æ–≤–∞–Ω–æ', y: @procurementPlanned, fill: '#6c757d' },
        { x: '–í –ø—Ä–æ—Ü–µ—Å—Å–µ', y: @procurementInProgress, fill: '#ffc107' },
        { x: '–ó–∞–≤–µ—Ä—à–µ–Ω–æ', y: @procurementCompleted, fill: '#28a745' }
    ];

    var pieChart = new ej.charts.AccumulationChart({
        series: [{
            dataSource: procurementData,
            xName: 'x',
            yName: 'y',
            pointColorMapping: 'fill',
            dataLabel: {
                visible: true,
                position: 'Inside',
                name: 'x'
            },
            innerRadius: '40%'
        }],
        legendSettings: { visible: true, position: 'Bottom' },
        tooltip: { enable: true }
    });
    pieChart.appendTo('#procurementStatusChart');
</script>
}
