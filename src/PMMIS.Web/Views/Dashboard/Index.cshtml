                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            @foreach (var alert in managementAlerts.Take(5))
                            {
                                var alertClass = alert.Severity == AlertSeverity.Critical 
                                    ? "list-group-item-danger" 
                                    : "list-group-item-warning";
                                <a href="@alert.LinkUrl" class="list-group-item list-group-item-action @alertClass py-3">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <strong>@alert.Title</strong>
                                            <p class="mb-0 small text-dark">@alert.Description</p>
                                        </div>
                                        <span class="badge @(alert.Severity == AlertSeverity.Critical ? "bg-danger" : "bg-warning text-dark")">
                                            @(alert.Severity == AlertSeverity.Critical ? "–ö—Ä–∏—Ç–∏—á–Ω–æ" : "–í–Ω–∏–º–∞–Ω–∏–µ")
                                        </span>
                                    </div>
