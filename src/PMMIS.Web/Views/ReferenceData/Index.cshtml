@{
    ViewData["Title"] = "Справочники";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2><i class="bi bi-book me-2"></i>Справочники</h2>
    
    <div class="row g-4 mt-3">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="bi bi-mortarboard me-2 text-primary"></i>Типы учреждений образования</h5>
                    <p class="card-text text-muted flex-grow-1">Школа, лицей, гимназия, дошкольное учреждение и т.д.</p>
                    <a asp-action="EducationTypes" class="btn btn-primary">
                        <i class="bi bi-gear"></i> Управление
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="bi bi-hospital me-2 text-danger"></i>Типы медучреждений</h5>
                    <p class="card-text text-muted flex-grow-1">Поликлиника, больница, ФАП и т.д.</p>
                    <a asp-action="HealthFacilityTypes" class="btn btn-danger">
                        <i class="bi bi-gear"></i> Управление
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title"><i class="bi bi-tags me-2 text-success"></i>Категории индикаторов</h5>
                    <p class="card-text text-muted flex-grow-1">Инфраструктура, социальные, финансовые и т.д.</p>
                    <a asp-action="IndicatorCategories" class="btn btn-success">
                        <i class="bi bi-gear"></i> Управление
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
