@model List<PMMIS.Domain.Entities.EducationInstitutionType>
@{
    ViewData["Title"] = "Типы учреждений образования";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Справочники</a></li>
            <li class="breadcrumb-item active">Типы учреждений образования</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-mortarboard me-2"></i>Типы учреждений образования</h2>
        <a asp-action="CreateEducationType" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Добавить тип
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 80px;">№ п/п</th>
                        <th>Название</th>
                        <th class="text-center" style="width: 100px;">Статус</th>
                        <th class="text-end" style="width: 150px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var type in Model)
                    {
                        <tr>
                            <td>@type.SortOrder</td>
                            <td>@type.Name</td>
                            <td class="text-center">
                                @if (type.IsActive)
                                {
                                    <span class="badge bg-success">Активен</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Неактивен</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="EditEducationType" asp-route-id="@type.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <form asp-action="DeleteEducationType" asp-route-id="@type.Id" method="post" class="d-inline" 
                                      onsubmit="return confirm('Удалить этот тип учреждения?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                Типы учреждений не добавлены. <a asp-action="CreateEducationType">Добавить первый</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
