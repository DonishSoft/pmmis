@model PMMIS.Domain.Entities.EducationInstitutionType
@{
    ViewData["Title"] = "Добавить тип учреждения";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Справочники</a></li>
            <li class="breadcrumb-item"><a asp-action="EducationTypes">Типы учреждений образования</a></li>
            <li class="breadcrumb-item active">Добавить</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0"><i class="bi bi-plus-circle me-2"></i>Новый тип учреждения</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateEducationType" method="post">
                        <div class="mb-3">
                            <label class="form-label">Название <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" placeholder="Например: Школа" required />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">№ сортировки в списке</label>
                            <input asp-for="SortOrder" type="number" class="form-control" />
                            <div class="form-text">Чем меньше номер, тем выше в списке</div>
                        </div>
                        
                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                                <label class="form-check-label">Активен</label>
                            </div>
                        </div>

                        <hr />

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i> Сохранить
                            </button>
                            <a asp-action="EducationTypes" class="btn btn-outline-secondary">Отмена</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
