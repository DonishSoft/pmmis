@model List<PMMIS.Domain.Entities.Indicator>
@{
    ViewData["Title"] = "Индикаторы";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var allCategories = Model.Where(i => i.Category != null).Select(i => i.Category!).DistinctBy(c => c.Id).OrderBy(c => c.Name).ToList();
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-graph-up me-2"></i>Индикаторы / KPI</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i> Добавить индикатор
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Поиск</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" id="searchFilter" placeholder="Код или название...">
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Категория</label>
                    <select class="form-select" id="categoryFilter">
                        <option value="">— Все —</option>
                        @foreach (var cat in allCategories)
                        {
                            <option value="@cat.Name">@cat.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Тип</label>
                    <select class="form-select" id="typeFilter">
                        <option value="">— Все —</option>
                        <option value="Число">Число</option>
                        <option value="%">%</option>
                        <option value="Да/Нет">Да/Нет</option>
                    </select>
                </div>
                <div class="col-auto">
                    <button class="btn btn-primary" onclick="applyFilters()" title="Применить фильтр">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
                <div class="col-auto">
                    <button class="btn btn-outline-secondary" onclick="clearFilters()" title="Сбросить">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <div class="col text-end">
                    <span class="text-muted">Найдено: <strong id="indicatorCount">@Model.Count</strong></span>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0" id="indicatorsTable">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60px">№</th>
                        <th style="width: 100px">Код</th>
                        <th>Название (РУ)</th>
                        <th>Тип</th>
                        <th>Категория</th>
                        <th class="text-end">Целевое</th>
                        <th class="text-center">Значений</th>
                        <th style="width: 180px" class="text-center">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var indicator in Model)
                    {
                        <tr data-parent-row="true" data-indicator-id="@indicator.Id"
                            data-code="@indicator.Code" 
                            data-name="@indicator.NameRu"
                            data-type="@(indicator.MeasurementType switch {
                                PMMIS.Domain.Entities.MeasurementType.Number => "Число",
                                PMMIS.Domain.Entities.MeasurementType.Percentage => "%",
                                PMMIS.Domain.Entities.MeasurementType.YesNo => "Да/Нет",
                                _ => indicator.MeasurementType.ToString()
                            })"
                            data-category="@(indicator.Category?.Name ?? "")">
                            <td>@indicator.SortOrder</td>
                            <td><code>@indicator.Code</code></td>
                            <td>
                                <a asp-action="Values" asp-route-indicatorId="@indicator.Id" class="fw-bold text-decoration-none">
                                    @indicator.NameRu
                                </a>
                                @if (indicator.SubIndicators.Any())
                                {
                                    <span class="badge bg-secondary ms-1">@indicator.SubIndicators.Count подинд.</span>
                                }
                            </td>
                            <td>
                                @(indicator.MeasurementType switch {
                                    PMMIS.Domain.Entities.MeasurementType.Number => "Число",
                                    PMMIS.Domain.Entities.MeasurementType.Percentage => "%",
                                    PMMIS.Domain.Entities.MeasurementType.YesNo => "Да/Нет",
                                    _ => indicator.MeasurementType.ToString()
                                })
                            </td>
                            <td>
                                @if (indicator.Category != null)
                                {
                                    <span class="badge bg-primary">@indicator.Category.Name</span>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td class="text-end">
                                @if (indicator.MeasurementType == PMMIS.Domain.Entities.MeasurementType.YesNo)
                                {
                                    <span class="text-muted">—</span>
                                }
                                else
                                {
                                    @(indicator.TargetValue?.ToString("N0") ?? "—")
                                }
                            </td>
                            <td class="text-center">
                                <span class="badge bg-info">@indicator.Values.Count</span>
                            </td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@indicator.Id" class="btn btn-sm btn-outline-primary me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Values" asp-route-indicatorId="@indicator.Id" class="btn btn-sm btn-outline-info me-1">
                                    <i class="bi bi-list-ol"></i>
                                </a>
                                <a asp-action="Create" asp-route-parentId="@indicator.Id" class="btn btn-sm btn-outline-success" title="Добавить подиндикатор">
                                    <i class="bi bi-plus"></i>
                                </a>
                            </td>
                        </tr>
                        @* Sub-indicators *@
                        @foreach (var sub in indicator.SubIndicators.OrderBy(s => s.SortOrder))
                        {
                            <tr class="table-secondary" data-child-of="@indicator.Id">
                                <td class="ps-4">↳ @sub.SortOrder</td>
                                <td><code class="text-muted">@sub.Code</code></td>
                                <td class="ps-4">@sub.NameRu</td>
                                <td>
                                    @(sub.MeasurementType switch {
                                        PMMIS.Domain.Entities.MeasurementType.Number => "Число",
                                        PMMIS.Domain.Entities.MeasurementType.Percentage => "%",
                                        PMMIS.Domain.Entities.MeasurementType.YesNo => "Да/Нет",
                                        _ => sub.MeasurementType.ToString()
                                    })
                                </td>
                                <td>—</td>
                                <td class="text-end">@(sub.TargetValue?.ToString("N0") ?? "—")</td>
                                <td class="text-center"><span class="badge bg-info">@sub.Values.Count</span></td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@sub.Id" class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Values" asp-route-indicatorId="@sub.Id" class="btn btn-sm btn-outline-info">
                                        <i class="bi bi-list-ol"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                Индикаторы не найдены. Создайте первый индикатор.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function applyFilters() {
        var search = document.getElementById('searchFilter').value.trim().toLowerCase();
        var category = document.getElementById('categoryFilter').value;
        var type = document.getElementById('typeFilter').value;
        
        var parentRows = document.querySelectorAll('tr[data-parent-row]');
        var visibleCount = 0;
        
        parentRows.forEach(function(row) {
            var code = (row.dataset.code || '').toLowerCase();
            var name = (row.dataset.name || '').toLowerCase();
            var rowType = row.dataset.type || '';
            var rowCategory = row.dataset.category || '';
            var indicatorId = row.dataset.indicatorId;
            
            var matches = true;
            
            if (search && !code.includes(search) && !name.includes(search)) {
                matches = false;
            }
            if (category && rowCategory !== category) {
                matches = false;
            }
            if (type && rowType !== type) {
                matches = false;
            }
            
            row.style.display = matches ? '' : 'none';
            
            // Show/hide child rows
            var childRows = document.querySelectorAll('tr[data-child-of="' + indicatorId + '"]');
            childRows.forEach(function(child) {
                child.style.display = matches ? '' : 'none';
            });
            
            if (matches) visibleCount++;
        });
        
        document.getElementById('indicatorCount').textContent = visibleCount;
    }
    
    function clearFilters() {
        document.getElementById('searchFilter').value = '';
        document.getElementById('categoryFilter').value = '';
        document.getElementById('typeFilter').value = '';
        applyFilters();
    }
    
    // Support Enter key in search
    document.getElementById('searchFilter').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') applyFilters();
    });
</script>
}

