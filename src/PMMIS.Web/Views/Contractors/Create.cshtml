@model PMMIS.Domain.Entities.Contractor
@{
    ViewData["Title"] = "Добавить подрядчика";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Подрядчики</a></li>
            <li class="breadcrumb-item active">Добавить подрядчика</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="card-title mb-0"><i class="bi bi-plus-circle me-2"></i>Новый подрядчик</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="row g-3">
                            <div class="col-md-8">
                                <label class="form-label">Название компании <span class="text-danger">*</span></label>
                                <input asp-for="Name" class="form-control" placeholder="ООО Строитель" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Страна</label>
                                <input asp-for="Country" class="form-control" placeholder="Таджикистан" />
                            </div>
                        </div>

                        <hr class="my-4" />
                        <h6 class="text-muted mb-3"><i class="bi bi-person-lines-fill me-2"></i>Контактная информация</h6>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Контактное лицо</label>
                                <input asp-for="ContactPerson" class="form-control" placeholder="Иванов Иван Иванович" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="info@company.tj" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Телефон</label>
                                <input asp-for="Phone" class="form-control" placeholder="+992 XX XXX-XX-XX" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Адрес</label>
                                <input asp-for="Address" class="form-control" placeholder="г. Душанбе, ул. ..." />
                            </div>
                        </div>

                        <hr class="my-4" />
                        <h6 class="text-muted mb-3"><i class="bi bi-paperclip me-2"></i>Документы компании</h6>
                        <div class="mb-3">
                            <label class="form-label">Регистрационные документы, лицензии, сертификаты</label>
                            <input type="file" name="ContractorFiles" class="form-control" multiple 
                                   accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" />
                            <small class="text-muted">PDF, Word, изображения</small>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i> Создать
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
