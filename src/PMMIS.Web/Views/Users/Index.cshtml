@model PMMIS.Web.ViewModels.Users.UserIndexViewModel
@{
    ViewData["Title"] = "Пользователи";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-people me-2"></i>Пользователи</h2>
        <div class="d-flex gap-2">
            <a asp-controller="Roles" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-shield-lock me-1"></i> Роли
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-person-plus me-1"></i> Добавить пользователя
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Search -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <input type="text" name="search" class="form-control" placeholder="Поиск по ФИО или email..." value="@Model.Search" />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-outline-primary me-2">
                        <i class="bi bi-search"></i> Найти
                    </button>
                        @if (!string.IsNullOrEmpty(Model.Search))
                        {
                            <a asp-action="Index" class="btn btn-outline-secondary">Сбросить</a>
                        }              </div>
            </form>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width: 60px"></th>
                        <th>ФИО</th>
                        <th>Email</th>
                        <th>Пол</th>
                        <th>Роль</th>
                        <th class="text-center">Статус</th>
                        <th class="text-center">Контракт</th>
                        <th style="width: 120px"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        var roles = Model.UserRoles.ContainsKey(user.Id) ? Model.UserRoles[user.Id] : new List<string>();
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(user.PhotoPath))
                                {
                                    <img src="@user.PhotoPath" alt="@user.FullName" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white" style="width: 40px; height: 40px;">
                                        @user.FirstName.Substring(0, 1)@user.LastName.Substring(0, 1)
                                    </div>
                                }
                            </td>
                            <td>
                                <strong>@user.FullName</strong>
                                @if (user.BirthDate.HasValue)
                                {
                                    <br><small class="text-muted">@user.BirthDate.Value.ToString("dd.MM.yyyy")</small>
                                }
                            </td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Gender == PMMIS.Domain.Entities.Gender.Male)
                                {
                                    <span class="text-primary"><i class="bi bi-gender-male"></i> М</span>
                                }
                                else
                                {
                                    <span class="text-danger"><i class="bi bi-gender-female"></i> Ж</span>
                                }
                            </td>
                            <td>
                                @foreach (var role in roles)
                                {
                                    <span class="badge bg-@(role switch {
                                        "PMU_ADMIN" => "danger",
                                        "PMU_STAFF" => "primary",
                                        "WORLD_BANK" => "info",
                                        "CONTRACTOR" => "warning",
                                        _ => "secondary"
                                    })">@role</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Активен</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Неактивен</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (!string.IsNullOrEmpty(user.ContractScanPath))
                                {
                                    <a href="@user.ContractScanPath" target="_blank" class="text-success" title="Просмотреть контракт">
                                        <i class="bi bi-file-earmark-check fs-5"></i>
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                @if (user.UserName != User.Identity?.Name)
                                {
                                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Удалить пользователя @user.FullName?')">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                    @if (!Model.Users.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="bi bi-people fs-1 d-block mb-2"></i>
                                Пользователи не найдены
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
