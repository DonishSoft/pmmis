@model PMMIS.Web.ViewModels.Users.UserCreateViewModel
@{
    ViewData["Title"] = "Добавить пользователя";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Пользователи</a></li>
            <li class="breadcrumb-item active">Добавить пользователя</li>
        </ol>
    </nav>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-person me-2"></i>Личные данные</h5>
                    </div>
                    <div class="card-body">
                        <!-- Photo Upload -->
                        <div class="mb-4 text-center">
                            <div class="mb-3">
                                <div id="photoPreview" class="rounded-circle bg-light d-flex align-items-center justify-content-center mx-auto" style="width: 120px; height: 120px; overflow: hidden;">
                                    <i class="bi bi-person fs-1 text-muted"></i>
                                </div>
                            </div>
                            <label class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-camera me-1"></i> Загрузить фото
                                <input type="file" name="photo" accept="image/*" class="d-none" onchange="previewPhoto(this)" />
                            </label>
                            <small class="d-block text-muted mt-1">Необязательно</small>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Фамилия <span class="text-danger">*</span></label>
                                <input type="text" name="LastName" class="form-control" value="@Model.LastName" required />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Имя <span class="text-danger">*</span></label>
                                <input type="text" name="FirstName" class="form-control" value="@Model.FirstName" required />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Отчество</label>
                                <input type="text" name="MiddleName" class="form-control" value="@Model.MiddleName" />
                            </div>
                        </div>

                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <label class="form-label">Пол</label>
                                <div class="btn-group w-100" role="group">
                                    <input type="radio" class="btn-check" name="Gender" id="genderMale" value="Male" @(Model.Gender == PMMIS.Domain.Entities.Gender.Male ? "checked" : "") />
                                    <label class="btn btn-outline-primary" for="genderMale">
                                        <i class="bi bi-gender-male me-1"></i> Мужской
                                    </label>
                                    <input type="radio" class="btn-check" name="Gender" id="genderFemale" value="Female" @(Model.Gender == PMMIS.Domain.Entities.Gender.Female ? "checked" : "") />
                                    <label class="btn btn-outline-danger" for="genderFemale">
                                        <i class="bi bi-gender-female me-1"></i> Женский
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Дата рождения</label>
                                <input type="date" name="BirthDate" class="form-control" value="@(Model.BirthDate?.ToString("yyyy-MM-dd"))" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-envelope me-2"></i>Учётная запись</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Email <span class="text-danger">*</span></label>
                                <input type="email" name="Email" class="form-control" value="@Model.Email" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Пароль <span class="text-danger">*</span></label>
                                <input type="password" name="Password" class="form-control" minlength="6" required />
                                <small class="text-muted">Минимум 6 символов, включая цифру и заглавную букву</small>
                            </div>
                        </div>
                        
                        <div class="row g-3 mt-2">
                            <div class="col-md-6">
                                <label class="form-label">Роль</label>
                                <select name="SelectedRole" class="form-select">
                                    <option value="">— Без роли —</option>
                                    @foreach (var role in Model.Roles)
                                    {
                                        <option value="@role.Name" selected="@(Model.SelectedRole == role.Name)">@role.Name - @(role.Description ?? "")</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Документы (для сотрудников PMU)</h5>
                    </div>
                    <div class="card-body">
                        <label class="form-label">Скан трудового контракта</label>
                        <input type="file" name="contractScan" class="form-control" accept=".pdf,.jpg,.jpeg,.png" />
                        <small class="text-muted">PDF, JPG или PNG. Необязательно.</small>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i> Создать пользователя
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function previewPhoto(input) {
    if (input.files && input.files[0]) {
        var reader = new FileReader();
        reader.onload = function(e) {
            document.getElementById('photoPreview').innerHTML = 
                '<img src="' + e.target.result + '" style="width: 100%; height: 100%; object-fit: cover;">';
        };
        reader.readAsDataURL(input.files[0]);
    }
}
</script>
